@model APPR6312_POE.Models.Users
@{
    ViewData["Title"] = "Login";
}

<html>
<head>
<meta name="viewport" content="width=device-width, initial-scale=1">
<style>
body {font-family: Arial, Helvetica, sans-serif;}


input[type=text], input[type=password] {
  width: 100%;
  padding: 12px 20px;
  margin: 8px 0;
  display: inline-block;
  box-sizing: border-box;
  text-align: center;
  
}

h1 {
    color: white;
}

h4 {
    color: white;
}

button {
  background-color: #452c63;
  color: white;
  padding: 14px 20px;
  margin: 8px 0;
  border: none;
  cursor: pointer;
  width: 100%;
}

button:hover {
  opacity: 0.8;
}

.cancelbtn {
  width: auto;
  padding: 10px 18px;
  background-color: #f44336;
}

.imgcontainer {
  text-align: center;
  margin: 24px 0 12px 0;
}

img.avatar {
  width: 40%;
  border-radius: 50%;
}

.container {
  padding: 16px;
}

span.psw {
  float: right;
  padding-top: 16px;
}
#div_form {
        margin: auto;
    }
    #rcorners2 {
  border-radius: 25px;
  border: 2px solid purple;
  padding: 20px; 
  width: 400px;
  height: 60px;  
}

</style>
</head>
<body>
@if (ViewBag.Error != null)
{
    <script type="text/javascript">
        window.onload = function() {
            alert("@ViewBag.Error");
        };
    </script>
}
    <center>
<h1>Login</h1>
</center>
<center>
<div class="container">
    <div class="row">
        <div id="div_form" class="col-md-4">
<form asp-action="Login">
  
    <h4> Email </h4>
    <input  asp-for="email" type="text" placeholder="Enter Email" name="email" required>

    <h4> Password </h4>
    <input  asp-for="password" type="password" placeholder="Enter Password" name="password" required>
        
    <button type="submit" class="btn btn-primary" value="Login">Login</button>  
  
  </form>  
  <form asp-action="Register">
    <button type="submit" asp-action="Register" class="btn btn-primary" value="Register">Register</button>
    </form>
    </div>
    </div>
    </div>
</center>
</body>
</html>
