@model IEnumerable<APPR6312_POE.Models.Disasters>
@{
    ViewData["Title"] = "Public";
}

<h1>Public</h1>

<center>
    <br />
    <h1>Disasters</h1>
    
    <p float:right>
        <form asp-action="Create">
            <button type="submit" asp-action="Create" value="" class="btn btn-primary">Submit a disaster</button>
        </form>
    </p>
</center>
<table class="table table-hover">
    <thead>
        <tr class="table-active">
            <th>
                <center>
                    @Html.DisplayNameFor(model => model.Start_Date)
                </center>
            </th>
            <th>
                <center>
                    @Html.DisplayNameFor(model => model.End_Date)
                </center>
            </th>
            <th>
                <center>
                    @Html.DisplayNameFor(model => model.Location)
                </center>
            </th>
            <th>
                <center>
                    @Html.DisplayNameFor(model => model.Description)
                </center>
            </th>
            <th>
                <center>
                    @Html.DisplayNameFor(model => model.aid)
                </center>
            </th>
            <th>
                <center>
                    @Html.DisplayNameFor(model => model.allocatedMoney)
                </center>
            </th>
       

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
              
            <tr>
                <td>
                    <center>
                        @Html.DisplayFor(modelItem => item.Start_Date)
                    </center>
                </td>
                <td>
                    <center>
                        @Html.DisplayFor(modelItem => item.End_Date)
                    </center>
                </td>
                <td>
                    <center>
                        @Html.DisplayFor(modelItem => item.Location)
                    </center>
                </td>
                <td>
                    <center>
                        @if(item.Description.Length < 20)
                        {
                            <label>
                                @item.Description
                            </label>
                           
                        }
                        else
                        {
                            <label>
                                @item.Description.Substring(0,16)
                                ...
                            </label>
                        }

                    </center>
                </td>
                <td>
                    <center>
                        @Html.DisplayFor(modelItem => item.aid)
                    </center>
                </td>
                <td>
                    <center>
                        @Html.DisplayFor(modelItem => item.allocatedMoney)
                    </center>
                </td>
                <td>
                    <center>
                        @Html.DisplayFor(modelItem => item.category)
                    </center>
                </td>             
            </tr>
        }
    </tbody>
</table>

